{
  "name": "wordpress-theme-starter-kit",
  "version": "1.0.0",
  "description": "My starter kit for developing new wordpress themes",
  "main": "",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npm run css-build && npm-watch",
    "css-watch": "npm run css-build -- --watch",
    "css-build": "node-sass --omit-source-map-url theme/assets/sass/style.scss theme/style.css"
  },
  "watch": {
    "css-build": {
      "patterns": [
        "theme/assets/sass"
      ],
      "extensions": "scss"
    }
  },
  "devDependencies": {
    "node-sass": "^4.12.0",
    "npm-watch": "^0.6.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fredicious/wordpress-theme-starter-kit.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fredicious/wordpress-theme-starter-kit/issues"
  },
  "homepage": "https://github.com/fredicious/wordpress-theme-starter-kit#readme"
}
